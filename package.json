{
  "name": "personal-website",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "razzle start",
    "build": "razzle build",
    "test": "razzle test --env=jsdom",
    "start:prod": "NODE_ENV=production node build/server.js",
    "app:start": "docker-compose -f docker-compose.dev.yml up --build",
    "app:build": "docker-compose -f docker-compose.yml build",
    "app:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up",
    "app:start:prod": "docker-compose -f docker-compose.yml up"
  },
  "dependencies": {
    "@types/enzyme": "3.10.3",
    "@types/express": "4.17.1",
    "@types/jest": "28.1.6",
    "@types/node": "12.12.8",
    "@types/react": "16.9.11",
    "@types/react-dom": "16.9.4",
    "@types/react-router-dom": "4.3.4",
    "@types/webpack-env": "1.14.1",
    "autoprefixer": "9.7.1",
    "css-loader": "1.0.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "express": "4.17.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-enzyme": "^7.1.1",
    "node-sass": "^4.12.0",
    "postcss-flexbugs-fixes": "4.1.0",
    "postcss-loader": "3.0.0",
    "postcss-scss": "2.0.0",
    "prettier": "1.18.2",
    "prettier-stylelint": "0.4.2",
    "prettier-tslint": "0.4.2",
    "razzle": "3.0.0",
    "razzle-plugin-typescript": "3.0.0",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-ga": "^2.6.0",
    "react-router-dom": "5.1.2",
    "sass-loader": "^8.0.0",
    "style-loader": "0.23.1",
    "stylelint": "10.1.0",
    "stylelint-config-standard": "18.3.0",
    "ts-jest": "24.1.0",
    "tslint": "5.20.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-react": "4.1.0",
    "typescript": "3.7.2",
    "webpack-bundle-analyzer": "^3.4.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest",
      "^.+\\.?(s)css$": "<rootDir>/node_modules/razzle/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(ts|js)?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "\\.scss$": "identity-obj-proxy",
      "^components$": "<rootDir>/src/client/components"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/tests/enzyme.js"
    ]
  },
  "devDependencies": {
    "dts-css-modules-loader": "^1.0.1",
    "extract-css-chunks-webpack-plugin": "^4.6.0"
  }
}
